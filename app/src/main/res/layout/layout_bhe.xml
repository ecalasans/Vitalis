<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    app:backgroundTint="@android:color/white">

    <TextView
        android:text="Diurese(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView5"
        android:layout_marginLeft="46dp"
        android:layout_width="140dp"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@+id/etEDiurese"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Vômitos(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView10"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="10dp"
        android:layout_width="140dp" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etESangue"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="50dp"
        android:layout_width="90dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:inputType="numberDecimal"
        android:gravity="center_horizontal|center" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etESNG"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="90dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_above="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:inputType="numberDecimal" />

    <TextView
        android:text="SNG(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView6"
        android:layout_width="140dp"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="Outros(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView22"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etEOutros"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="90dp"
        android:layout_above="@+id/textView22"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22"
        android:inputType="numberDecimal"
        android:gravity="center_horizontal|center" />

    <TextView
        android:text="Fezes"
        android:layout_height="16dp"
        android:id="@+id/textView9"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="140dp"
        android:layout_below="@+id/rtEFezes"
        android:layout_alignLeft="@+id/rtEFezes"
        android:layout_alignStart="@+id/rtEFezes" />

    <TextView
        android:text="Sangue(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView18"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_below="@+id/etESangue"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="Dreno(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView21"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etEVomitos"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:layout_width="90dp"
        android:gravity="center_horizontal"
        android:layout_above="@+id/textView10"
        android:layout_alignLeft="@+id/etESNG"
        android:layout_alignStart="@+id/etESNG"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="134dp"
        android:id="@+id/etEDiurese"
        android:textAlignment="gravity"
        android:layout_width="90dp"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="25dp"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtElPac"
        android:textStyle="normal|bold"
        android:textColor="@color/azulPadrao"
        android:hint="Nome do paciente"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:id="@+id/rtEFezes"
        android:max="5"
        android:numStars="5"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_height="40dp"
        android:layout_width="140dp"
        style="@android:style/Widget.Holo.RatingBar.Indicator"
        android:isIndicator="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:stepSize="1.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEDataHora"
        android:textColor="@color/verdePadrao"
        android:textSize="12sp"
        android:hint="Data e hora da evolução"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_below="@+id/txtElPac"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etEDreno"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="90dp"
        android:inputType="numberDecimal"
        android:layout_above="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:gravity="center_horizontal|center" />


</RelativeLayout>