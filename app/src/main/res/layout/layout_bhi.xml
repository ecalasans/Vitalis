<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    app:backgroundTint="@android:color/white">

    <TextView
        android:text="Oral(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView10"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="NPT(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView11"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="SNG(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView6"
        android:layout_width="140dp"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:text="HV(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView5"
        android:layout_marginLeft="46dp"
        android:layout_width="140dp"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@+id/etIHV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Medic.(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView9"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_below="@+id/etIMed"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Drogas(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView18"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_below="@+id/etIDrogas"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="Sangue(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView21"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="Outros(mL)"
        android:layout_height="16dp"
        android:id="@+id/textView22"
        android:gravity="center_horizontal"
        android:background="@color/verdePadrao"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIPac"
        android:textStyle="normal|bold"
        android:textColor="@color/azulPadrao"
        android:hint="Nome do paciente"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:gravity="center" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etIHV"
        android:textAlignment="gravity"
        android:layout_width="90dp"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/txtIDataHora"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:gravity="center" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etISNG"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:gravity="center" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etINPT"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:layout_width="90dp"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:gravity="center"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etIOral"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:layout_width="90dp"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:layout_above="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etIMed"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="90dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etIDrogas"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="55dp"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIDataHora"
        android:textColor="@color/verdePadrao"
        android:textSize="12sp"
        android:hint="Data e hora da evolução"
        android:textAlignment="center"
        android:gravity="center_horizontal|center"
        android:layout_below="@+id/txtIPac"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etISangue"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_above="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etIOutros"
        android:textAlignment="gravity"
        android:textColor="@color/azulPadrao"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_above="@+id/textView22"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />


</RelativeLayout>